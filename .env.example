# ===========================================
# SFERA - AI Carousel Generator
# Environment Configuration
# ===========================================

# ========== AI & LLM SERVICES ==========
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Claude (Alternative)
CLAUDE_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-opus

# ========== DATABASE ==========
# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sfera?retryWrites=true&w=majority
MONGO_DB_NAME=sfera

# Supabase (Alternative)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ========== EXTERNAL INTEGRATIONS ==========
# Pinterest API
PINTEREST_ACCESS_TOKEN=your-pinterest-access-token
PINTEREST_BUSINESS_ACCOUNT_ID=your-business-account-id
PINTEREST_API_VERSION=v1

# Google (for Analytics, Vision API, etc.)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_VISION_API_KEY=your-vision-api-key

# ========== SERVER CONFIGURATION ==========
# Node.js / Express
PORT=3000
HOST=localhost
NODE_ENV=development

# Frontend URLs
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# ========== SECURITY ==========
# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,https://andxsexai.github.io

# ========== LOGGING & MONITORING ==========
LOG_LEVEL=debug
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# ========== CACHING ==========
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL=3600

# ========== FILE UPLOAD ==========
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf
UPLOAD_DIR=./uploads

# ========== RATE LIMITING ==========
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ========== TEMPLATES ==========
DEFAULT_TEMPLATE_STYLE=minimal
TEMPLATE_CACHE_SIZE=100
TEMPLATE_PREVIEW_WIDTH=1080
TEMPLATE_PREVIEW_HEIGHT=1920

# ========== AI GENERATION ==========
GENERATION_MAX_RETRIES=3
GENERATION_TIMEOUT=30000
GENERATION_TEMPERATURE=0.7

# ========== PINTEREST MINING ==========
PINTEREST_SYNC_INTERVAL=86400
PINTEREST_MAX_RESULTS=50
PINTEREST_SEARCH_KEYWORDS=carousel design,instagram carousel,social media template

# ========== FEATURE FLAGS ==========
ENABLE_AI_CHAT=true
ENABLE_PINTEREST_SYNC=true
ENABLE_TEMPLATE_EXPORT=true
ENABLE_USER_ACCOUNTS=false
ENABLE_ANALYTICS=true
